<div class="jumbotron">
    <h1 class="text-center">JEOPICODUS!</h1>
</div>

<div class="container">
    <div id="gameboard">
        <div class="row">
            <div class="col-sm">
                @await Html.PartialAsync("_QuestionCard", "Cat 1")
            </div>
            <div class="col-sm">
                @await Html.PartialAsync("_QuestionCard", "Cat 2")
            </div>
            <div class="col-sm">
                @await Html.PartialAsync("_QuestionCard", "Cat 3")
            </div>
            <div class="col-sm">
                @await Html.PartialAsync("_QuestionCard", "Cat 4")
            </div>
        </div>
        @for(int i = 1; i <=5; i++)
        {
            <div class="row">
                <div class="col-sm">
                    @await Html.PartialAsync("_QuestionCard", (i*100).ToString())
                </div>
                <div class="col-sm">
                    @await Html.PartialAsync("_QuestionCard", (i*100).ToString())
                </div>
                <div class="col-sm">
                    @await Html.PartialAsync("_QuestionCard", (i*100).ToString())
                </div>
                <div class="col-sm">
                    @await Html.PartialAsync("_QuestionCard", (i*100).ToString())
                </div>
            </div>
        }
    </div>
</div>